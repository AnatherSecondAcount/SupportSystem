<?xml version="1.0" encoding="UTF-8"?>

<!-- Инструкции обработки для импорта классов в FXML -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<!-- Указываем контроллер и корневой элемент -->
<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.MainController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Список заявок:"/>

    <!-- Элементы интерфейса с fx:id, чтобы контроллер мог к ним обратиться -->
    <ListView fx:id="ticketsListView" prefHeight="400.0"/>

    <Button fx:id="refreshButton" text="Обновить список" onAction="#loadTickets"/>

</VBox>