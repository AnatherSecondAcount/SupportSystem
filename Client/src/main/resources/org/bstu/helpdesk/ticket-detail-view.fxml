<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bstu.helpdesk.controllers.TicketDetailController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Секция с основной информацией о заявке -->
    <GridPane hgap="10" vgap="10">
        <Label text="ID Заявки:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Заголовок:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="titleLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Статус:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="statusLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Описание:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="descriptionLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" wrapText="true"/>

        <!-- Кнопки управления статусом и удаления -->
        <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <Button fx:id="markInProgressButton" onAction="#onMarkInProgress" text="Взять в работу"/>
            <Button fx:id="markAsClosedButton" onAction="#onMarkAsClosed" text="Закрыть заявку"/>
            <Button fx:id="deleteButton" onAction="#onDelete" text="Удалить" style="-fx-base: #f44336;"/>
        </HBox>
    </GridPane>

    <Separator/>

    <Label text="Комментарии:" style="-fx-font-weight: bold;"/>

    <ListView fx:id="commentsListView" prefHeight="150.0"/>

    <HBox spacing="10">
        <TextField fx:id="newCommentField" promptText="Введите ваш комментарий..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="addCommentButton" onAction="#onAddComment" text="Добавить"/>
    </HBox>
    <!-- ==================================================================== -->

</VBox>